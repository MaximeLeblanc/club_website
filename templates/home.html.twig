{# templates/home.html.twig #}
{% extends 'common/base.html.twig' %}

{% block body %}
<div class="row mt-3">
    <div class="col-12 col-sm-6 col-lg-4">
        <div id="homeCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner img-thumbnail">
                {% for image in images %}
                    <div class="carousel-item {% if image.id == 1 %} active {% endif %}">
                        <img class="d-block img-responsive w-100" src="{{ asset(image.path) }}" alt="{{ image.title }}">
                    </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#homeCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#homeCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="homeCarouselText">
            Je teste.
        </div>
    </div>
    {% for club in clubs %}
        <div class="col-12 col-sm-6 col-lg-4 my-3">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-address-card mr-3"></i>
                    {{ club.name }}
                </div>
                <div class="card-body text-dark">
                    <div class="text-center"><img class="card-img-top rounded-circle w-50 mb-3" src="{{ asset(club.logo) }}" alt="Logo"></div>
                    <br />
                    <i class="fas fa-map-marked-alt fa-fw mr-3"></i>
                    {{ club.address }}
                    <br />
                    <i class="fas fa-city fa-fw mr-3"></i>
                    {{ club.city }}
                    <br />
                    <i class="fas fa-at fa-fw mr-3"></i>
                    {{ club.email }}
                    <br />
                    <i class="fas fa-user fa-fw mr-3"></i>
                    {{ club.user.name }} {{ club.user.lastName }}
                </div>
                <div class="card-footer card-footer-home">
                    {% if club.facebook %}
                        <a class="card-link text-dark" href="{{ club.facebook }}" target="_blank"><i class="fab fa-facebook-square facebookIcon"></i></a>
                    {% endif %}
                    {% if club.instagram %}
                        <a class="card-link text-dark" href="{{ club.instagram }}" target="_blank"><i class="fab fa-instagram instagramIcon"></i></a>
                    {% endif %}
                    {% if club.twitter %}
                        <a class="card-link text-dark" href="{{ club.twitter }}" target="_blank"><i class="fab fa-twitter twitterIcon"></i></a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}